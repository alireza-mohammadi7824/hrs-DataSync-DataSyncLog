@page
@model HRSDataIntegration.Web.Pages.DataSyncLogModel
@{
    ViewData["Title"] = "DataSync Logs";
}

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <h4 class="mb-0">📜 DataSync Logs</h4>
    </div>
    <div class="card-body">

        <!-- Search & Filters -->
        <form method="get" class="row g-2 mb-3">
            <div class="col-md-4">
                <input name="Query" value="@Model.Query" class="form-control" placeholder="Search in Type / Exception..." />
            </div>

            <div class="col-md-2">
                <select name="IsDoneFilter" class="form-select">
                    <option value="" selected="@(Model.IsDoneFilter == null)">All</option>
                    <option value="true" selected="@(Model.IsDoneFilter == true)">Done (true)</option>
                    <option value="false" selected="@(Model.IsDoneFilter == false)">Not Done (false)</option>
                </select>
            </div>

            <div class="col-md-2">
                <input type="date" name="FromDate" value="@(Model.FromDate?.ToString("yyyy-MM-dd"))" class="form-control" placeholder="From date" />
            </div>
            <div class="col-md-2">
                <input type="date" name="ToDate" value="@(Model.ToDate?.ToString("yyyy-MM-dd"))" class="form-control" placeholder="To date" />
            </div>

            <div class="col-md-2 d-grid">
                <button class="btn btn-primary" type="submit">🔍 Search</button>
            </div>

            <!-- حفظ سورت و سایز صفحه -->
            <input type="hidden" name="PageSize" value="@Model.PageSize" />
            <input type="hidden" name="SortOrder" value="@Model.SortOrder" />
        </form>

        <!-- Table -->
        <table class="table table-bordered table-hover align-middle custom-table">
            <thead class="custom-header">
                <tr>
                    <th>
                        <a asp-page="./DataSyncLog" class="header-link"
                           asp-route-sortOrder="@Model.GetSortOrder("CreationTime")"
                           asp-route-Query="@Model.Query"
                           asp-route-IsDoneFilter="@Model.IsDoneFilter"
                           asp-route-FromDate="@(Model.FromDate?.ToString("yyyy-MM-dd"))"
                           asp-route-ToDate="@(Model.ToDate?.ToString("yyyy-MM-dd"))"
                           asp-route-Page="@Model.Page"
                           asp-route-PageSize="@Model.PageSize">
                            CREATION TIME @Model.SortIcon("CreationTime")
                        </a>
                    </th>

                    <th>
                        <a asp-page="./DataSyncLog" class="header-link"
                           asp-route-sortOrder="@Model.GetSortOrder("Type")"
                           asp-route-Query="@Model.Query"
                           asp-route-IsDoneFilter="@Model.IsDoneFilter"
                           asp-route-FromDate="@(Model.FromDate?.ToString("yyyy-MM-dd"))"
                           asp-route-ToDate="@(Model.ToDate?.ToString("yyyy-MM-dd"))"
                           asp-route-Page="@Model.Page"
                           asp-route-PageSize="@Model.PageSize">
                            TYPE @Model.SortIcon("Type")
                        </a>
                    </th>

                    <th>
                        <a asp-page="./DataSyncLog" class="header-link"
                           asp-route-sortOrder="@Model.GetSortOrder("IsDone")"
                           asp-route-Query="@Model.Query"
                           asp-route-IsDoneFilter="@Model.IsDoneFilter"
                           asp-route-FromDate="@(Model.FromDate?.ToString("yyyy-MM-dd"))"
                           asp-route-ToDate="@(Model.ToDate?.ToString("yyyy-MM-dd"))"
                           asp-route-Page="@Model.Page"
                           asp-route-PageSize="@Model.PageSize">
                            IS DONE @Model.SortIcon("IsDone")
                        </a>
                    </th>

                    <th><span class="header-text">EXCEPTION MESSAGE</span></th>

                    <th>
                        <a asp-page="./DataSyncLog" class="header-link"
                           asp-route-sortOrder="@Model.GetSortOrder("LastModificationTime")"
                           asp-route-Query="@Model.Query"
                           asp-route-IsDoneFilter="@Model.IsDoneFilter"
                           asp-route-FromDate="@(Model.FromDate?.ToString("yyyy-MM-dd"))"
                           asp-route-ToDate="@(Model.ToDate?.ToString("yyyy-MM-dd"))"
                           asp-route-Page="@Model.Page"
                           asp-route-PageSize="@Model.PageSize">
                            LAST MODIFIED @Model.SortIcon("LastModificationTime")
                        </a>
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.Logs)
                {
                    <tr>
                        <td>@item.CreationTime</td>
                        <td>@item.Type</td>
                        <td>
                            @if (item.IsDone == true)
                            {
                                <span class="badge bg-success">True</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">False</span>
                            }
                        </td>
                        <td>@item.ExceptionMessage</td>
                        <td>@item.LastModificationTime</td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Pager -->
        <nav aria-label="Logs pagination">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.Page <= 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-page="./DataSyncLog"
                       asp-route-Page="@(Model.Page - 1)"
                       asp-route-PageSize="@Model.PageSize"
                       asp-route-SortOrder="@Model.SortOrder"
                       asp-route-Query="@Model.Query"
                       asp-route-IsDoneFilter="@Model.IsDoneFilter"
                       asp-route-FromDate="@(Model.FromDate?.ToString("yyyy-MM-dd"))"
                       asp-route-ToDate="@(Model.ToDate?.ToString("yyyy-MM-dd"))">
                        « Prev
                    </a>
                </li>

                @for (int p = 1; p <= Model.TotalPages; p++)
                {
                    <li class="page-item @(p == Model.Page ? "active" : "")">
                        <a class="page-link"
                           asp-page="./DataSyncLog"
                           asp-route-Page="@p"
                           asp-route-PageSize="@Model.PageSize"
                           asp-route-SortOrder="@Model.SortOrder"
                           asp-route-Query="@Model.Query"
                           asp-route-IsDoneFilter="@Model.IsDoneFilter"
                           asp-route-FromDate="@(Model.FromDate?.ToString("yyyy-MM-dd"))"
                           asp-route-ToDate="@(Model.ToDate?.ToString("yyyy-MM-dd"))">
                            @p
                        </a>
                    </li>
                }

                <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-page="./DataSyncLog"
                       asp-route-Page="@(Model.Page + 1)"
                       asp-route-PageSize="@Model.PageSize"
                       asp-route-SortOrder="@Model.SortOrder"
                       asp-route-Query="@Model.Query"
                       asp-route-IsDoneFilter="@Model.IsDoneFilter"
                       asp-route-FromDate="@(Model.FromDate?.ToString("yyyy-MM-dd"))"
                       asp-route-ToDate="@(Model.ToDate?.ToString("yyyy-MM-dd"))">
                        Next »
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>


<style>
    .custom-header {
        background-color: #ececec;
    }

        .custom-header th {
            text-align: center;
            font-size: 14px;
            font-weight: 600;
            color: #222;
            padding: 12px;
            vertical-align: middle;
        }

        .custom-header .header-link {
            text-decoration: none;
            color: #333;
        }

         .custom-table td {
            vertical-align: middle;
            text-align: center;
            font-size: 13px;
        }

            .custom-header .header-link:hover {
                color: #007bff;
            }

        .custom-header .header-text {
            color: #333;
            font-size: 14px;
            font-weight: 600;
        }

</style>